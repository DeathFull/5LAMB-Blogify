{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": "."
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "build", ".serverless"]
}
